<h1><%= @party.name %></h1>
<h3><%= @party.address %></h3>
<h3><%= @party.display_time %></h3>

<h2>Host</h2>
<h3><%= link_to @host.name, user_path(@host) %></h3>

<h2>Attendees</h2>
<ul>
  <% @party.attendees.each do |attendee| %>
  <li><%= attendee.name %></li>
  <% end %>
</ul>

<h2>Dishes</h2>
<ul>
  <% @party.dishes.each do |dish| %>
    <% dish.foods.each do |food| %>
    <li><%=food.name%> - <%=dish.user.name%></li>
    <% end %>
  <% end %>
</ul>
